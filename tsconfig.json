{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "docs",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "docs"
  ]
}